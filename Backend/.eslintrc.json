{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-param-reassingn": "off",
        "camelcase": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}
